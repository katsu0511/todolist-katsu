<div class="box">
  <h2>Edit Board</h2>

  <% @board.errors.full_messages.each do |message| %>
    <p class="error_message"><%= message %></p>
  <% end %>

  <%= form_with model: @board, local: true do |f| %>

    <div class="field">
      <label class="title">Name</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label class="content">Description</label>
      <%= f.text_area :content %>
    </div>

    <div class="actions">
      <%= f.submit :Submit %>
    </div>
    
  <% end %>

</div>
