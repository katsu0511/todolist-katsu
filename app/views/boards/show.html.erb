<div class="box">
  <h2><%= @board.title %></h2>
  <div class="tasks">
    <% @board.tasks.each do |task| %>
      <%= link_to board_task_path(@board, task), class: 'task' do %>
        <% if task.image_name %>
          <%= image_tag "/eyecatches/#{task.image_name}", class: 'task_eyecatch' %>
        <% end %>
        <h3 class="task_title"><%= task.title %></h3>
        <p class="task_content"><%= task.content %></p>
        <time class="task_by"><%= task.expiration %></time>
        <div class="task_display board_display">
          <%= image_tag 'user.svg', class: 'task_display_icon board_display_icon' %>
          <p class="task_display_name board_display_name"><%= task.user.display_name %></p>
        </div>
        <div class="task_comment">
          <div class="task_comment_count"><%= task.comments.count %></div>
          <%= image_tag 'comment.svg', class: 'task_comment_icon' %>
        </div>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to '+ Add new card', new_board_task_path(@board), class: 'new_task new_board' %>
    <% end %>
  </div>
</div>
