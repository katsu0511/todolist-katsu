<div class="box">

  <% @profile.errors.full_messages.each do |message| %>
    <p class="error_message"><%= message %></p>
  <% end %>

  <h2>Edit Profile</h2>

  <%= form_with model: @profile, url: profile_path, method: 'put', local: true do |f| %>

    <div class="field">
      <label class="nickname">Name</label>
      <%= f.text_field :nickname %>
    </div>

    <div class="field">
      <label class="introduction">Introduction</label>
      <%= f.text_area :introduction %>
    </div>

    <div class="field">
      <label class="gender">Gender</label>
      <%= f.select :gender, ['male', 'female', 'other'], {}, class: 'gender_select' %>
    </div>

    <div class="actions">
      <%= f.submit :Submit %>
    </div>

  <% end %>
</div>
