<div class="box">

  <% @profile.errors.full_messages.each do |message| %>
    <p class="error_message"><%= message %></p>
  <% end %>

  <h2>Edit Profile</h2>

  <%= form_tag(profile_path, method: :put, multipart: true) do %>

    <div class="field">
      <label class="nickname">Name</label>
      <input type="text" name="nickname" value="<%= @profile.nickname %>" >
    </div>

    <div class="field">
      <label class="introduction">Introduction</label>
      <textarea name="introduction"><%= @profile.introduction %></textarea>
    </div>

    <div class="field">
      <label class="gender">Gender</label>
      <select name="gender" class="gender_select" value="<%= @profile.gender %>">
        <option value="male">male</option>
        <option value="female">female</option>
        <option value="other">other</option>
      </select>
    </div>

    <div class="actions">
      <input type="submit" value="Submit">
    </div>

  <% end %>
</div>
