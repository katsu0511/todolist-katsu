<div class="board">
  <h3 class="board_title"><%= link_to board.title, board_path(board) %></h3>
  <p class="board_content"><%= board.content %></p>
  <div class="board_display">
    <% if board.user.profile.image_name %>
      <%= image_tag "/avatars/#{board.user.profile.image_name}", class: 'board_display_icon' %>
    <% else %>
      <%= image_tag 'user.svg', class: 'board_display_icon' %>
    <% end %>
    <p class="board_display_name"><%= board.author_name %></p>
  </div>
  <% if user_signed_in? && current_user.has_written?(board) %>
    <div class="board_drop">
      <%= image_tag 'drop.svg', class: 'board_drop_icon' %>
      <div class="board_drop_content">
        <%= link_to 'Edit', edit_board_path(board), class: 'board_drop_content_btn' %>
        <%= link_to 'Delete', board_path(board), class: 'board_drop_content_btn', method: :delete %>
      </div>
    </div>
  <% end %>
</div>
